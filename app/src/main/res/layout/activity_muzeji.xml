<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_muzeji"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fujitsue751.prijava.Muzeji">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="325dp"
                    app:srcCompat="@drawable/zemaljski"
                    android:id="@+id/ZemaljskiSlika"/>

                <TextView
                    android:text="Zemaljski muzej"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ZemaljskiNaziv"
                    android:textSize="18dp"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ZemaljsiRV"

                    android:text="Uto-Pet 10:00-19:00 , Vikend 10:00-14:00"/>

                <TextView
                    android:text="Zmaja od Bosne 3, Sarajevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ZemaljskiAdresa"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/historijski"
                    android:id="@+id/HistorijskiSlika"/>

                <TextView
                    android:text="Historijski muzej"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HistorijskiNaziv"
                    android:textStyle="normal|bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="Svaki dan 09:00-19:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HistorijskiRV"/>

                <TextView
                    android:text="Zmaja od Bosne 5, Sarajevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HistorijskiAdresa"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/djetinjstvo"
                    android:id="@+id/MRDSlika"
                    />

                <TextView
                    android:text="Muzej ratnog djetinjstva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MRTNaziv"
                    android:textSize="18dp"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:text="Uto-Ned 11:00-19:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MRDRV"/>

                <TextView
                    android:text="Logavina 32, Sarajevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MRDAdresa"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
