<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/nadanasnidan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:text="Dogodilo se na današnji dan"
                    android:textSize="18dp"
                    android:textStyle="normal|bold"/>

                <ImageView
                    android:id="@+id/Slika1"
                    android:layout_width="wrap_content"
                    android:layout_height="325dp"
                    app:srcCompat="@drawable/balletphoto"/>

                <TextView
                    android:text="1950. - Na sceni Narodnog pozorišta u Sarajevu Sarajevski balet izveo svoju prvu samostalnu predstavu."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ZemaljskiNaziv"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textStyle="normal|bold"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pisac"
                    android:id="@+id/Slika2"/>

                <TextView
                    android:text="Ruski književnik Aleksandar Solženjicin vratio se u Rusiju nakon 20 godina ropstva."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HistorijskiNaziv"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18dp"/>



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/jurvisor"
                    android:id="@+id/Slika3"
                    />

                <TextView
                    android:text="Umro Gabrijel Jurkić, bosanski slikar - impresionist."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MRTNaziv"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textStyle="normal|bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/oscar"
                    android:id="@+id/Slika5"
                    />

                <TextView
                    android:text="Prva dodjela nagrade Oskar – 1929.Kipiće je izradio kipar George Stanley, a kao model mu je poslužio meksički glumac Emilio El Indio Fernández."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/oscar"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textStyle="normal|bold"/>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>


